<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:Toss.Forms.UI.Views">
    <Style TargetType="{x:Type views:MyAssetContent}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MyAssetContent}">
                    <Border
                        Margin="20,0,20,20"
                        Background="#17181C"
                        CornerRadius="15">
                        <Grid>
                            <TextBox
                                Background="Transparent"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Foreground="White"
                                Text="TEST" />
                            <Button Background="Transparent" BorderThickness="{TemplateBinding BorderThickness}" />
                        </Grid>
                    </Border>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
