<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:based="clr-namespace:Toss.Core;assembly=Toss.Core"
    xmlns:views="clr-namespace:Toss.Forms.UI.Views">
    <Style TargetType="{x:Type views:MainWindow}">
        <Setter Property="Width" Value="450" />
        <Setter Property="Height" Value="600" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainWindow}">
                    <Border>
                        <Grid>
                            <based:PrismRegion RegionName="MainRegion" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
